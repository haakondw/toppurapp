<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="onTaskClick">
    
    <CheckBox 
        android:id="@+id/pasient_task_checkbox"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_centerVertical="true">
    </CheckBox>
    
    <TextView 
        android:id="@+id/pasient_task_medicine"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/pasient_task_checkbox">
    </TextView>
    
    <TextView 
        android:id="@+id/pasient_task_medicine_form"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:layout_below="@id/pasient_task_medicine"
		android:layout_toRightOf="@id/pasient_task_checkbox">
    </TextView>
    
    <TextView 
        android:id="@+id/pasient_task_medicine_dosage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:layout_below="@id/pasient_task_medicine_form"
		android:layout_toRightOf="@id/pasient_task_checkbox">
    </TextView>
    
    <TextView 
        android:id="@+id/pasient_task_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
		android:layout_centerVertical="true">
    </TextView>

</RelativeLayout>